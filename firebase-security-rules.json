{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "events": {
          "$eventId": {
            ".validate": "newData.hasChildren(['eventName', 'cars', 'unassignedPassengers', 'lastUpdated'])",
            "eventName": {
              ".validate": "newData.isString() && newData.val().length <= 100"
            },
            "cars": {
              ".validate": "newData.hasChildren()"
            },
            "unassignedPassengers": {
              ".validate": "newData.hasChildren()"
            },
            "lastUpdated": {
              ".validate": "newData.isNumber()"
            }
          }
        }
      }
    },
    "shared": {
      "$shareId": {
        ".read": true,
        ".write": "data.child('ownerId').val() === auth.uid || !data.exists()",
        "ownerId": {
          ".validate": "newData.val() === auth.uid"
        },
        "eventName": {
          ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "cars": {
          ".validate": "newData.hasChildren()"
        },
        "unassignedPassengers": {
          ".validate": "newData.hasChildren()"
        },
        "lastUpdated": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
